@model Intex2.Models.Burial

<form asp-action="Create">

    <div class="shadow tabs">
        <input type="radio" name="tabs" id="tabone" checked="checked">
        <label for="tabone">Exhumation Data Entry</label>
        <div class="tab">

            <h1>Create Burial Record</h1>

            <p><i>This is where we can write a short page description about stuff and such</i></p>

            <br />

            <div class="row">
                <div class="col-md-2">
                    <span>Record Created By: </span>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="InitialsOfDataEntryChecker" class="form-control" placeholder="Your Name Here" />
                        <span asp-validation-for="InitialsOfDataEntryChecker" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-md-2">
                    <span>Date of Excavation: </span>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="YearExcav" class="form-control" placeholder="Year" />
                        <span asp-validation-for="YearExcav" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="MonthExcavated" class="form-control" placeholder="Month" />
                        <span asp-validation-for="MonthExcavated" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="DateExcavated" class="form-control" placeholder="Day" />
                        <span asp-validation-for="DateExcavated" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <h2>Burial ID</h2>

            <div class="row">

                <div class="col-md-4">
                    <!--North or South-->
                    <div class="form-group shadow-sm">
                        <input asp-for="NorthOrSouth" class="form-control" placeholder="North or South" />
                        <span asp-validation-for="NorthOrSouth" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!--This is the NS Low ID (i.e. the 140 in 140/150-->
                    <div class="form-group shadow-sm">
                        <input asp-for="NsLowPosition" class="form-control" placeholder="Low Position (N/S)" />
                        <span asp-validation-for="NsLowPosition" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!--This is the NS High ID (i.e. the 150 in 140/150) this field will be hidden-->
                    <div class="form-group shadow-sm">
                        <input asp-for="NsHighPosition" class="form-control" placeholder="High Position (N/S)" />
                        <span asp-validation-for="NsHighPosition" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-md-4">
                    <!-- East or West -->
                    <div class="form-group shadow-sm">
                        <input asp-for="EastOrWest" class="form-control" placeholder="East or West" />
                        <span asp-validation-for="EastOrWest" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!--This is the EW Low ID (i.e. the 40 in 40/50)-->
                    <div class="form-group shadow-sm">
                        <input asp-for="EwLowPosition" class="form-control" placeholder="Low Position (E/W)" />
                        <span asp-validation-for="EwLowPosition" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!--This is the EW High ID (i.e. the 50 in 40/50)-->
                    <div class="form-group shadow-sm">
                        <input asp-for="EwHighPosition" class="form-control" placeholder="High Position (E/W)" />
                        <span asp-validation-for="EwHighPosition" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-md-6">
                    <!-- Area (NW, NE, SW, SE) -->
                    <div class="form-group shadow-sm">
                        <input asp-for="Square" class="form-control" placeholder="Area" />
                        <span asp-validation-for="Square" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Burial Number -->
                    <div class="form-group shadow-sm">
                        <input asp-for="BurialNumber" class="form-control" placeholder="Burial Number" />
                        <span asp-validation-for="BurialNumber" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <br />

            <h2>Metrics</h2>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group shadow-sm">
                        <input asp-for="BurialSouthToHead" class="form-control" placeholder="Burial South to Head" />
                        <span asp-validation-for="BurialSouthToHead" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group shadow-sm">
                        <input asp-for="BurialSouthToFeet" class="form-control" placeholder="Burial South to Feet" />
                        <span asp-validation-for="BurialSouthToFeet" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group shadow-sm">
                        <input asp-for="BurialWestToHead" class="form-control" placeholder="Burial West to Head" />
                        <span asp-validation-for="BurialWestToHead" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group shadow-sm">
                        <input asp-for="BurialWestToFeet" class="form-control" placeholder="Burial West to Feet" />
                        <span asp-validation-for="BurialWestToFeet" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group shadow-sm">
                        <input asp-for="LengthM" class="form-control" placeholder="Burial Length (in Meters)" />
                        <span asp-validation-for="LengthM" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 ">
                    <div class="form-group shadow-sm">
                        <input asp-for="BurialDepth" class="form-control" placeholder="Burial Depth (in Meters)" />
                        <span asp-validation-for="BurialDepth" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <br />

            <h2>Observations</h2>

            <div class="row">

                <div class="col-md-6">
                    <p>This should be yes or no on photo</p>
                </div>

                <div class="col-md-6">
                    <div class="form-group shadow-sm">
                        <input asp-for="Goods" class="form-control" placeholder="Burial Goods" />
                        <span asp-validation-for="Goods" class="text-danger"></span>
                    </div>
                </div>


            </div>

            <div class="row">
                <!-- Additional burial information (opitonal when form is submitted) -->
                <!--This is on a scale of i-4 (preservation index on sheet) -->

                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="BurialPreservation" class="form-control" placeholder="Burial preservation" />
                        <span asp-validation-for="BurialPreservation" class="text-danger"></span>
                    </div>
                </div>

                <!-- Head direction (e/w) -->

                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="BurialDirection" class="form-control" placeholder="Burial head direction" />
                        <span asp-validation-for="BurialDirection" class="text-danger"></span>
                    </div>
                </div>


            </div>

            <div class="form-group text-right">
                <input type="submit" value="Create Burial" class="btn btn-primary" />
            </div>

        </div>

        <input type="radio" name="tabs" id="tabtwo">
        <label for="tabtwo">Body Details</label>
        <div class="tab">
            <h1>Tab Two Content</h1>

            <p><i>This is where we can write a short page description about stuff and such</i></p>

            <h2>General Information</h2>

            <div class="row">

                <div class="col-md-6">
                    <!-- Gender code (aka the sex) -->
                    <div class="shadow-sm form-group">
                        <input asp-for="GenderCode" class="form-control" placeholder="Gender" />
                        <span asp-validation-for="GenderCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Hair Color -->
                    <div class="shadow-sm form-group">
                        <input asp-for="HairColorCode" class="form-control" placeholder="Hair color" />
                        <span asp-validation-for="HairColorCode" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">

                <!-- Age code (i.e. Adult, child, infant) -->

                <div class="col-md-4">
                    <div class="shadow-sm form-group">
                        age code
                        <select asp-for="AgeCodeSingle" class="form-control" asp-items="ViewBag.AgeCodeSingle"></select>
                    </div>
                </div>

                <!-- Estimate of age range of da mummy -->

                <div class="col-md-4">
                    <div class="shadow-sm form-group">
                        <input asp-for="NumericMinAge" class="form-control" placeholder="Minimum estimate of age" />
                        <span asp-validation-for="NumericMinAge" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <input asp-for="NumericMaxAge" class="form-control" placeholder="Maximum estimate of age" />
                        <span asp-validation-for="NumericMaxAge" class="text-danger"></span>
                    </div>
                </div>


            </div>



            <!-- Second section of data on form -->

            <h2>Samples Taken</h2>

            <div class="row">

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="HairTaken" class="form-control" placeholder="Hair taken?" />
                        <span asp-validation-for="HairTaken" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="SoftTissueTaken" class="form-control" placeholder="Soft tissue taken?" />
                        <span asp-validation-for="SoftTissueTaken" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="BoneTaken" class="form-control" placeholder="Bone taken?" />
                        <span asp-validation-for="BoneTaken" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="ToothTaken" class="form-control" placeholder="Tooth taken?" />
                        <span asp-validation-for="ToothTaken" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="TextileTaken" class="form-control" placeholder="Textile taken?" />
                        <span asp-validation-for="TextileTaken" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <textarea asp-for="DescriptionOfTaken" class="form-control" placeholder="Enter description of samples taken here..."></textarea>
                        <span asp-validation-for="DescriptionOfTaken" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group text-right">
                <input type="submit" value="Create Burial" class="btn btn-primary" />
            </div>

        </div>

        <input type="radio" name="tabs" id="tabthree">
        <label for="tabthree">Tab Three</label>
        <div class="tab">
            <h1>Os</h1>
            <p>Ain't this neat?</p>

            <div class="form-group text-right">
                <input type="submit" value="Create Burial" class="btn btn-primary" />
            </div>
        </div>

       

    </div>

    <br /> <br /> <br /> <br />


</form>