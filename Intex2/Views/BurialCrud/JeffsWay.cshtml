@model BurialListViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-sm-2">
        <partial name="FilterPartialView" />
    </div>

    <div class="col-sm-10">

        <table class="table table-bordered table-striped mt-2">

            <thead>
                <tr>
                    <th>BurialId</th>
                    <th>Sex</th>
                    <th>Area</th>
                    <th>Length</th>
                    <th>Depth</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var mummy in Model.Burials)
                {

                    <tr>
                        <td>@mummy.BurialId</td>
                        <td>@mummy.Sex</td>
                        <td>@mummy.Square</td>
                        <td>@mummy.LengthM</td>
                        <td>@mummy.BurialDepth</td>
                    </tr>
                }
            </tbody>


        </table>

    </div>


</div>