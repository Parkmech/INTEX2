@model PhotosViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string printId;
    if (Model.Photos.Count() != 0)
    {
        printId = "Photos for " + Model.Burial.BurialId;

    }
    else
    {
        printId = "There are no photos for " + Model.Burial.BurialId;
    }
    }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>


<style>
    body {
        background-color: #E9ECEF;
    }
</style>
<br />


<div class="card shadow mb-3" style="max-width: auto">
    <div class="container m-3 p-2">
        <h1>@printId</h1>
        <hr />
        <dl class="row">
            @foreach (var x in Model.Photos)
            {

                ViewBag.PhotoId = "https://elasticbeanstalk-us-east-1-891046424969.s3.amazonaws.com/Photos/" + @x.PhotoId;

                <dt class="col-sm-10 p-3">
                    <img src="@ViewBag.PhotoId" width="500" />
                </dt>

                @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdministratorRole")).Succeeded)
                {
                    <dd><a class="btn btn-danger" asp-action="Delete" asp-controller="PhotosCrud"asp-route-id="@x.Id">Delete</a> </dd>
                }

            }
        </dl>
        <div>
            <a class="btn btn-primary" asp-controller="BurialCrud" asp-action="Details" asp-route-id="@Model.Burial.BurialId">Back to Details</a>
        </div>
    </div>
</div>
</body>
</html>
