@model Intex2.Models.BiologicalSample
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string id = (string)ViewBag.id;
}

<h1>Edit</h1>

<form asp-action="CustomEdit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Rack" class="control-label"></label>
        <input asp-for="@Model.Rack" class="form-control" value="@Model.Rack" />
        <span asp-validation-for="@Model.Rack" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Notes" class="control-label"></label>
        <input asp-for="@Model.Notes" class="form-control" value="@Model.Notes" />
        <span asp-validation-for="@Model.Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Initials" class="control-label"></label>
        <input asp-for="@Model.Initials" class="form-control" value="@Model.Initials" />
        <span asp-validation-for="@Model.Initials" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Date" class="control-label"></label>
        <input asp-for="@Model.Date" class="form-control" value="@Model.Date" />
        <span asp-validation-for="@Model.Date" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="@Model.BurialId" value="@Model.BurialId" />
    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
            
<hr />
<div class="row">
    <div class="col-md-4">
        
    </div>
</div>

<div>
    <a asp-action="RecordSpecificIndex" asp-route-id="@Model.BurialId">Back to Biological Samples</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
