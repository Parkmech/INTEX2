@model Intex2.Models.BiologicalSample

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="card text-center shadow-sm col-md-3 m-1 p-1">
    <div class="card-header">
        <h5>Sample Rack: @Model.Rack</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">
            @Model.Notes
        </h5>
        <p class="card-text">
            Initials: @Model.Initials
        </p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="@Model.BurialId" />
            <input type="hidden" asp-for="@Model.Notes" />
            <input type="hidden" asp-for="@Model.Initials" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
    <div class="card-footer text-muted">Date: @Model.Date </div>
</div>    
    
